
<script>
function updateContactInfo(address, email, tel) {
  document.getElementById('adres').innerText = address;
  document.getElementById('email').innerText = email;
  document.getElementById('tel').innerText = tel;
}

document.getElementById('uithoorn').onclick = function() {
  updateContactInfo('adres\npostcode Uithoorn', 'email1', 'tel1');
};

document.getElementById('haarlem').onclick = function() {
  updateContactInfo('adres\npostcode Haarlem', 'email2', 'tel2');
};

</script>
